<% if @comments %>   
  <table class="table table-striped">    
    <% @comments.each_with_index do |msg, index| %>
    <tr>
      
      <td>
        <div>           
          <em><p>
              <% if msg.user_id%>
              <%= image_tag User.find(msg.user_id).ava_url, :style=>"width:18px" %>
              <%= User.find(msg.user_id).get_user_info() %>
              <% end %>
              <span class="muted"><small><%= msg.created_at.to_s(:ru_datetime)%></small></span>
          </p></em>
          <p><%= sanitize(msg.body.gsub(/\n/, '<br>'))%>                          
                <% if session[:user_id] == msg.user_id %>
                  <span><%= link_to '', edit_comment_path(msg) %> </span>
                <% end %>
          </p>
        </div>
      <% end %>
    </td>
  </tr>
  </table>
<% end %>

<%= form_for(@new_comment) do |f| %>  
  <div class="well">
    
      <p>Добавить комментарий<p>
      <%= f.text_area :body, cols: 60, rows: 3%>    
      <%= f.hidden_field :user_id, :value => session[:user_id] %>
      <%= f.hidden_field :post_id, :value => @new_comment.post_id %>    

    <div class="form-actions1">
      <%= f.submit :Добавить, :class => 'btn btn-primary' %>
    </div>           

  </div>
  
<% end %>