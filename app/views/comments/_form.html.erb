<%= form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :Текст, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'text_area' %>
    </div>
  </div>
  <% if admin_rights? %>
    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :user_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :post_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :post_id, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :parent, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :parent, :class => 'text_field' %>
      </div>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit 'Сохранить', :class => 'btn btn-primary' %>
    <%= link_to 'Отмена',
                post_path(@comment.post_id), :class => 'btn' %>
  </div>
<% end %>
