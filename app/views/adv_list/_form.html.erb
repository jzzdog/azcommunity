<% if @adv %>
<% @adv.each do |adv| %>
	<div class="entry">
		<%= image_tag(adv.get_image_url) %>		
		<h3><%= link_to adv.title, adv, :style=>"color:gray"%></h3>
		<p><%= sanitize(adv.description)%></p>
		<% if adv.price %>
			<div class="price_line">
				<span class="price"><%= sprintf("%0.02f руб.", adv.price) %></span>
			</div>
		<% end %>

		<div class="userinfo">
			<span><%= User.find_by(id: adv.user_id).get_user_info() %></span>						
		</div>
		<div class="userinfo">			
			<span><%= adv.created_at.strftime("%d.%m.%Y в %k:%m") %></span>
			<% if session[:user_id] == adv.user_id %>
			  <span><%= link_to 'редактировать', edit_advert_path(adv), :style=>"color:gray" %> </span>
			<% end %>
		</div>
	</div>
<% end %>
<% end %>

<p> </p>

<% if params[:only_my] && (@adv.count == 0) %>


<h4> У вас пока нет своих объявлений.</h4>
<h4> Нажмите "Подать объявление", чтобы добавить объявление. </h4>
<br/>
<% end %>	


<% if Advert.count > @adv.count %>
	<% if not params[:only_my] %>
		<span><%= button_to 'Показать еще', adv_list_showmore_path(limit: @adv.count + 5 ), :class => "showmore", remote: true %> </span>
	<% end %>
<% end %>