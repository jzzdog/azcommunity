<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :Рубрика, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :topic_id, Topic.all.map{ |t| [t.name, t.id] }, {}, {:style=>'width:510px;'} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :Заголовок, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field', :style=>'width:500px'%>
    </div>
  </div>  

  <div class="control-group">
    <%= f.label :Текст, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'text_field', cols: 65, rows: 10, :style=>'width:500px' %>
    </div>
  </div>  

  <div class="form-actions">
    <%= f.submit params[:action] == "edit" ? 'Обновить' : 'Добавить', :class => 'btn btn-primary' %>
    <%= link_to 'Отмена',post_path(@post), :class => 'btn' %>
  </div>
<% end %>
